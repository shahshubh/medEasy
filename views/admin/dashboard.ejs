    <!-- for graphs -->
    <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
	<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>

	<script>
		$(function () {
			$('.count').each(function () {
				$(this).prop('Counter',0).animate({
					Counter: $(this).text()
				}, {
					duration: 2000,
					easing: 'swing',
					step: function (now) {
						$(this).text(Math.ceil(now));
					}
				});
			});
			var dataPoints = [];
			var productDataPoints = [];
			var ordersDataPoints = [];
			CanvasJS.addColorSet("customColorSet",
                [
					"#003f5c",
					"#2f4b7c",
					"#665191",
					"#a05195",
					"#d45087",
					"#f95d6a",
					"#ff7c43",
					"#ffa600"               
                ]);
			// CanvasJS column chart to show revenue from Jan 2015 - Dec 2015
			var revenueColumnChart = new CanvasJS.Chart("revenue-column-chart", {
				colorSet: "customColorSet",
				animationEnabled: true,
				backgroundColor: "transparent",
				theme: "theme2",
				axisX: {
					labelFontSize: 14,
					labelFontColor: "white",
					valueFormatString: "DD MMM YYYY"
				},
				axisY: {
					labelFontSize: 14,
					prefix: "₹",
					labelFontColor: "white"
				},
				toolTip: {
					borderThickness: 0,
					cornerRadius: 0
				},
				data: [
					{
						type: "column",
						yValueFormatString: "₹ ###,###.##",
						dataPoints: dataPoints
					}
				]
			});
			
			//CanvasJS pie chart to show product wise annual revenue for 2015
			var productsRevenuePieChart = new CanvasJS.Chart("products-revenue-pie-chart", {
				colorSet: "customColorSet",
				animationEnabled: true,
				theme: "theme2",
				legend: {
					fontSize: 14
				},
				toolTip: {
					borderThickness: 0,
					content: "<span style='\"'color: {color};'\"'>{name}</span>: ₹ {y} (#percent%)",
					cornerRadius: 0
				},
				data: [
					{       
						indexLabelFontColor: "#676464",
						indexLabelFontSize: 14,
						legendMarkerType: "square",
						legendText: "{label}",
						indexLabel: "{label}",
						showInLegend: true,
						startAngle:  90,
						type: "pie",
						dataPoints: productDataPoints
					}
				]
			});
			
			
			//CanvasJS spline chart to show orders from Jan 2015 to Dec 2015
			var ordersSplineChart = new CanvasJS.Chart("orders-spline-chart", {
				colorSet: "customColorSet",
				animationEnabled: true,
				backgroundColor: "transparent",
				theme: "theme2",
				toolTip: {
					borderThickness: 0,
					cornerRadius: 0
				},
				axisX: {
					labelFontSize: 14,
					labelFontColor: "#202040",
					valueFormatString: "DD MMM YYYY",
					labelFontWeight: "bold"
				},
				axisY: {
					gridThickness: 0,
					labelFontSize: 14,
					lineThickness: 2,
					labelFontColor: "#202040",
					labelFontWeight: "bold"
				},
				data: [
					{
						markerColor: "#5b005c",
						lineColor: "#f000ff",
						type: "bar",
						dataPoints: ordersDataPoints
					}
				]
			});

			function addData(data) {
				for (var i = 0; i < data.length; i++) {
					dataPoints.push({
						x: new Date(data[i]._id),
						y: data[i].total
					});
				}					
				//console.log("data",dataPoints);
				revenueColumnChart.render();
			}
			function addProductData(data) {
				for (var i = 0; i < data.length; i++) {
					if(data[i].soldQty && data[i].soldQty > 0){
						productDataPoints.push({
									label: data[i].title,
									y: data[i].soldQty*data[i].price,
									name: data[i].title
								});
					}
				}
				//console.log("productData",productDataPoints);
				productsRevenuePieChart.render();
			}

			function addOrdersData(data) {
				for (var i = 0; i < data.length; i++) {
					ordersDataPoints.push({
						x: new Date(data[i]._id),
						y: data[i].count
					});
				}
				//console.log("orderData",ordersDataPoints);
				ordersSplineChart.render();
			}
			$.getJSON("/api/daily-sales", addData);
			$.getJSON("/api/product-sales", addProductData);
			$.getJSON("/api/daily-orders-count", addOrdersData);
			
		});
	</script>
<!-- end for graphs -->


