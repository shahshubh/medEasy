          <div class="card">
            <div class="card-header card-header-primary">
              <div class="row">
                <div class="col-md-6">
                  <h4 class="card-title ">Orders</h4>
                  <p class="card-category">All Orders</p>
                </div> 
             
              <div class="col-md-6">
                <div class="btn-group" data-toggle="buttons">
                  <label class="btn btn-confirm active">
                      <input type="radio" name="status" value="all" checked="checked"> All
                  </label>
                  <label class="btn btn-success">
                      <input type="radio" name="status" value="delivered"> Delivered
                  </label>
                  <label class="btn btn-info">
                      <input type="radio" name="status" value="confirmed"> Confirmed
                  </label>	
                  <label class="btn btn-warning" style="background-color:yellow;color:black">
                      <input type="radio" name="status" value="pending"> Pending
                  </label>						
              </div>
            </div>
          </div>
            </div>
            <div class="card-body">
              <div class="table-responsive table-striped" style="text-align: center;" >
                <table class="table" id="orders"> 
                  <thead class=" text-primary">
                    <th>
                      Sr No.
                    </th>
                    <th>
                      Order ID
                    </th>
                    <th>
                      User ID
                    <th>  
                      User name
                    </th>
                      <th>
                      Purchase Date
                    </th>
                    <th>
                      Total Price
                    </th>
                    <th>
                    Payment id
                    </th>
                    <th>
                    Payment Mode
                    </th>
                      <th>
                      Status
                    </th>
                  </thead>
                  <tbody>
<!--pending
confirmed-->        

                    <% var sr = 0; %>
                    <% orders.forEach(function(order){ 
                      sr = sr+1;
                      var status;
                      if(order.isConfirmed && order.isDelivered){ 
                        status = "delivered";
                      } else if(order.isConfirmed && !order.isDelivered){
                        status = "confirmed";
                      } else if(!order.isConfirmed && !order.isDelivered){
                        status = "pending";
                      } %>
                      <tr data-status="<%= status %>">
                        <td id="sr-no">
                          <%= sr %>
                        </td>  
                        <td id="order_id">
                          <a  class="idd" href="/admin/order-details/<%= order._id %>">
                          <%= order._id %>
                          </a>
                        </td>
                        <td id="user_id">
                          <%= order.user %>
                        </td>                    
                        <td id="user_name">
                          <%= order.name %>
                        </td>
                        <td id="purchase_date">
                          <% var date = order.purchaseDate %>
                          <%= date.getDate() %>/<%= date.getMonth() + 1 %>/<%= date.getFullYear() %>
                        </td>
                        <td class="text-primary" id="total_price">
                          â‚¹<%= order.cart.totalPrice %>
                        </td>
                        <td id="payment_id">
                          <% if(order.paymentId) { %>
                            <%= order.paymentId %>
                          <% } else { %>
                            -
                          <% } %>
                        </td>
                        <td id="payment_mode">
                          <%= order.paymentMode %>
                        </td>
                        <% if(order.isConfirmed && order.isDelivered){ %>
                          <td id="status">
                            <span class="label label-success">Delivered</span>
                          </td>
                        <% } else if(order.isConfirmed && !order.isDelivered){ %>
                          <td id="status">
                            <span class="label label-info">Confirmed</span>
                          </td>
                        <% } else if(!order.isConfirmed && !order.isDelivered){ %>
                          <td id="status">
                            <span class="label label-warning">Pending</span>
                          </td>
                        <% } %>
                      </tr>
                    <% }) %>
                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>
