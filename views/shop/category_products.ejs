<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/css/category_products.css">
    <div class="container">
        <div class="row row_m">
            <div class="col">
                <h2 class="cat_hd">Category Name</h2>
            </div>
        </div>
        <hr class="line_hr">
        <div class="row">
            <% products.forEach(function(product){ %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-3">
                        <div class="container con1">
                            <img class="card-img-top" src="<%= product.image %>" alt="Card image cap">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="/products/<%= product._id %>" title="View Product"><span><%= product.title %></span></a></h4>
                            <div class="row">
                                <div class="col">
                                    <p class="pr" >â‚¹ <%= product.price %></p>
                                </div>
                                <div class="col">
                                    <a href="/add-to-cart/<%= product._id %>"><button type="button" class="cart_button"><i class="fa fa-shopping-cart mr-2" aria-hidden="true"></i>Add to Cart</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
            <div class="col-12">
                <nav aria-label="...">
                    <ul class="pagination">
                        <% if(paginationResult.prev_page){ %>
                            <li class="page-item">
                                <a class="page-link" href="/category/<%= products[0].category %>?page=<%= paginationResult.prev_page %>" tabindex="-1">Previous</a>
                            </li>
                        <% } %>
                            
                        <% for(var i=1; i <= paginationResult.total_pages; i++){ %>
                            <li class="page-item"><a class="page-link" href="/category/<%= products[0].category %>?page=<%= i %>"><%= i %></a></li>
                        <% } %>
                            
                        <% if(paginationResult.next_page){ %>
                            <li class="page-item">
                                <a class="page-link" href="/category/<%= products[0].category %>?page=<%= paginationResult.next_page %>" tabindex="-1">Next</a>
                            </li>
                        <% } %>
                        
                    </ul>
                </nav>
            </div>
</body>
</html>







